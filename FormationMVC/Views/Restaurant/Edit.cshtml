@model FormationMVC.ViewModel.CreateVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="Restaurant.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Restaurant.Id" class="control-label"></label>
                <input asp-for="Restaurant.Id" class="form-control" />
                <span asp-validation-for="Restaurant.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Name" class="control-label"></label>
                <input asp-for="Restaurant.Name" class="form-control" />
                <span asp-validation-for="Restaurant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Address" class="control-label"></label>
                <input asp-for="Restaurant.Address" class="form-control" />
                <span asp-validation-for="Restaurant.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.PhoneNumber" class="control-label"></label>
                <input asp-for="Restaurant.PhoneNumber" class="form-control" />
                <span asp-validation-for="Restaurant.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Restaurant.Cuisines)
                <select class="form-control" id="Restaurant_Cuisines" name="Restaurant.Cuisines">
                    <option value="">Select cuisine</option>
                    @foreach (var cuisine in Model.Cuisins)
                    {
                        <option value="@cuisine.Name">@cuisine.Name</option>
                    }
                </select>
                @Html.ValidationMessageFor(m => m.Restaurant.Cuisines, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
